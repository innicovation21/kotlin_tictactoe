<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="32dp"
    android:background="@color/bgCol"
    >

    <TextView
        android:id="@+id/tvNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Als nächstes: X"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        />


    <!--    Spieler 1-->
    <TextView
        android:id="@+id/tvPlayer1Name"
        style="@style/playerTv"
        tools:text="Player1"
        app:layout_constraintStart_toStartOf="@id/llSpielfeld"
        tools:ignore="MissingConstraints" />
    <!--    Spieler 2-->
    <TextView
        android:id="@+id/tvPlayer2Name"
        style="@style/playerTv"
        tools:text="Player2"
        app:layout_constraintEnd_toEndOf="@id/llSpielfeld"
        tools:ignore="MissingConstraints" />
    <!--    Punktezähler Spieler 2-->
    <TextView
        android:id="@+id/tvPlayer1Score"
        style="@style/scoreBoard"
        tools:text="0"
        app:layout_constraintStart_toStartOf="@id/llSpielfeld"
        tools:ignore="MissingConstraints"/>
    <!--    Punktezähler Spieler 2-->
    <TextView
        android:id="@+id/tvPlayer2Score"
        style="@style/scoreBoard"
        tools:text="0"
        app:layout_constraintEnd_toEndOf="@id/llSpielfeld"
        tools:ignore="MissingConstraints" />

    <!--Spielfeld-->
    <LinearLayout
        android:background="@android:color/holo_orange_dark"
        android:id="@+id/llSpielfeld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <!--        Reihe 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn1"
                style="@style/field"
                tools:ignore="DuplicateSpeakableTextCheck"
                tools:text="X" />
            <!-- Divider -->
            <View style="@style/vertDivider" />
            <Button
                android:id="@+id/btn2"
                style="@style/field"
                tools:text="X"/>
            <!-- Divider -->
            <View style="@style/vertDivider" />
            <Button
                android:id="@+id/btn3"
                style="@style/field"
                tools:text="X"/>
        </LinearLayout>
        <!--        Reihe 2 -->
        <!-- Divider -->
        <View style="@style/horDivider" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn4"
                style="@style/field"
                tools:text="X"/>
            <!-- Divider -->
            <View style="@style/vertDivider" />
            <Button
                android:id="@+id/btn5"
                style="@style/field"
                tools:text="X"/>
            <!-- Divider -->
            <View style="@style/vertDivider" />
            <Button
                android:id="@+id/btn6"
                style="@style/field"
                tools:text="X"/>

        </LinearLayout>
        <!-- Divider -->
        <View style="@style/horDivider" />
        <!--        Reihe 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn7"
                style="@style/field"
                tools:text="X"/>
            <!-- Divider -->
            <View style="@style/vertDivider" />
            <Button
                android:id="@+id/btn8"
                style="@style/field"
                tools:text="X"/>
            <!-- Divider -->
            <View style="@style/vertDivider" />
            <Button
                android:id="@+id/btn9"
                style="@style/field"
                tools:text="X"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/llSpielfeld"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnNewGame"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/restart"
            />
        
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/resetScore"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>

        <Button
            android:id="@+id/nextActBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/changeNames"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
